    <script>
        // parent.GetChildValue('login');
        function denglu(e){
            var phone = $('input[name="phone"]').val();
            var password = $('input[name="password"]').val();
            var code = $('input[name="code"]').val();
            if(!phone){
                layer.msg('please fill account');return;
            }if(!password){
                layer.msg('Please fill password');return;
            }if(!code){
                layer.msg('please fill captcha');return;
            }if(code != 492){
                layer.msg('Wrong captcha');
                location.reload();
                return;
            }
            $(e).attr('disabled','disabled');//提交ajax时禁用按钮 
            $.ajax({
                type:"POST",
                url:"/includes/loginVerif.php",
                data:{
                    account:phone,
                    pwd:password,
                },
                //"Result" param in (Operator Object) "success:" catches whatever php echos back.
                success : function(result)
                {
                    location.href="/login.php";
                    return;
                    // if( result == 200 )
                    // {
                    //     location.href="/login.php";
                    //     return;
                    // }
                    // else
                    // {
                    //     layer.msg('Wrong Username or Password');
                    // }
                    $(e).removeAttr('disabled');//提交成功时启用按钮
                }
            });
        }
    </script>
